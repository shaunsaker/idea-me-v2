{
  "name": "IdeaMe",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest && yarn run detox",
    "detox": "detox build && detox test",
    "storybook": "storybook start -p 7007"
  },
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "16.4.1",
    "react-native": "0.56.0",
    "react-native-firebase": "^4.3.7",
    "react-native-keyboard-aware-scroll-view": "^0.6.0",
    "react-native-material-menu": "^0.3.2",
    "react-native-router-flux": "^4.0.0-beta.31",
    "react-native-simple-animators": "^2.2.3",
    "react-native-simple-components": "^2.2.1",
    "react-native-snackbar": "^0.4.7",
    "react-native-vector-icons": "^4.6.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-saga": "^0.16.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.8",
    "@storybook/addon-links": "^3.4.8",
    "@storybook/addons": "^3.4.8",
    "@storybook/react-native": "^3.4.8",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "23.4.0",
    "babel-preset-react-native": "^5",
    "babel-runtime": "^6.26.0",
    "detox": "^8.0.0",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-detox": "^1.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-react-native": "^3.2.1",
    "jest": "23.4.1",
    "react-dom": "16.4.1",
    "react-test-renderer": "16.4.1",
    "redux-saga-testing": "^1.0.5"
  },
  "jest": {
    "preset": "react-native",
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation)"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/IdeaMe.app",
        "build": "xcodebuild -project ios/IdeaMe.xcodeproj -scheme IdeaMe -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      }
    },
    "test-runner": "jest"
  }
}